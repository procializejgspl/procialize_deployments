<div class="row-fluid">
  <div class="span12">
    <h3><%= @survey.name %></h3>
    <hr>
  </div>
</div>

<%= form_tag({:action => "submit_survey_answer"}) do %>
    <%= hidden_field_tag "survey_id",@survey.id %>
<div class="row-fluid">
  <div class="span12 event_list_container" >
    <ul class="message_alternate_colored_list">
      <%  @survey.questions.each_with_index do |q,index| %>
          <li style="margin-top: 2%;">
            <div class="row-fluid">
              <div class="span12">
                <div class="row-fluid message_list_header">
                  <div class="span6">
                  <span style="font-size: 1.2em"><%= q.name %></span>
                  </div>
                </div>

                <div style="padding: 2%;font-size: 1.1em">


                  <div class="row-fluid">
                    <div class="span12">
                     <% q.options.each do |o| %>
                      <div class="span3">
                        <%= radio_button_tag q.id,o.id,true %>   <%= o.name %>
                      </div>
                          <% end %>
                    </div>
                  </div>
                </div>

              </div>
            </div>




          </li>
      <% end %>
    </ul>

     <div class="row-fluid">
       <div class="span4 offset5">
         <%= submit_tag "Submit" %>
       </div>
     </div>
  </div>


</div>
<% end %>