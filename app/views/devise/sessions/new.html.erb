<style>
  body{
      background: -webkit-radial-gradient(white, #e0f3fa); /* Safari 5.1 to 6.0 */
      background: -o-radial-gradient(white, #e0f3fa); /* For Opera 11.6 to 12.0 */
      background: -moz-radial-gradient(white, #e0f3fa); /* For Firefox 3.6 to 15 */
      background: radial-gradient(white, #e0f3fa); /* Standard syntax (must be last) */
      color: #003663;
      font-family: "Open sans";
  }
</style>
<div class="row-fluid" style="margin-top: 5%;">
  <div class="span12">
    <div class="row-fluid">
      <div class="span6">
        <%= image_tag Customizer.first.event_logo.url,:style => 'width:100%',:class => 'img-responsive' %>
      </div>

      <div class="span6" style="margin-top: 12%;">
        <h2 style="text-align: center" class="hidden-phone sign_in">Sign In</h2>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

            <fieldset>
              <div class="clearfix">
                <%= f.email_field :email, :autofocus => true,:placeholder=>"Email/Username",:class => "input-xxlarge" %>
              </div>
              <div class="clearfix">
                <%= f.password_field :password,:placeholder=>"Password",:class => "input-xxlarge"%>
              </div>
              <div class="clearfix">
                <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %> Remember Me
                <% end -%>
                <%= f.submit "Sign in",:class=>"btn btn-primary pull-right"%>
              </div>
              <div class="clearfix" style="text-align: center;">
                <h4>OR</h4>
              </div>

              <div class="clearfix"  style="text-align: center;">
                <a href="<%= user_omniauth_authorize_path(:linkedin) %>" class="btn btn-info"><%= image_tag "linkedin_logo.png",:size=>"32x32" %>Sign in with LinkedIn</a>
              </div>
            </fieldset>
<% end %>
      </div>
    </div>
  </div>
</div>



