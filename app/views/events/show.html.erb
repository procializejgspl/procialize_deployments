<style>
    body{
        color: #003663;
        font-family: "open sans";
    }
</style>

<div class="row-fluid message_header_container">
  <div class="span12">
    <!--<div class="span3">-->
      <!--<div class="row-fluid">-->
        <!--<%#= image_tag "user_dummy.jpg",:style => "border:1px solid black;",:width => "200px" %>-->
      <!--</div>-->

    <!--</div>-->

    <div class="span9">
      <div class="row-fluid">
        <div class="row-fluid">
          <div class="span12">
          <b><%= @event.name %>

            <% if !@event.event_asset.url.include?("missing") %>
                <a target="_blank"  href="<%=@event.event_asset.url%>"><i class="icon-download"></i> </a>
                <% end %>
            </b>
          </div>
        </div>

        <!--<div class="row-fluid">-->
          <!--<div class="span12">-->
          <!--<%#= @event.location %>-->
          <!--</div>-->
        <!--</div>-->

        <div class="row-fluid">
          <div class="span12">
            <b><%= display_date_time(@event.starting_at) %></b>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="span3">
              <!--<button type="submit" class="btn btn-success btn-small" onclick="event_likes();">join</button>-->
              <% if !is_user_attending_event?(@event.id,current_user.id) %>
                  <%= link_to "Join it ",new_attendee_path(:event_id=>@event.id,:decision=>"true"),:class => "btn btn-small btn-default ",:onclick => 'toggleContent(this,event)'  %>
              <% else %>
                  <%= link_to "Leave it ",new_attendee_path(:event_id=>@event.id,:decision=>"false"),:class => "btn btn-small btn-default ",:onclick => 'toggleContent(this,event)'   %>
              <% end %>
            </div>

            <div class="span3">
              <%= link_to "Question",new_questionable_path(:event_id=>@event.id),:class => "btn btn-small btn-default ",:onclick=>'toggleContent(this,event)' %>
            </div>

            <div class="span3">
              <%= link_to " Friends ",attendees_path(:event_id=>@event.id),:class => "btn btn-small btn-default",:onclick=>'toggleContent(this,event)' %>
            </div>
            <div class="span3">
              <%= generate_feedback_link(@event.id)%>
            </div>

            <div class="span3 hidden-desktop">
              <%= link_to "Back",events_path,:class=>"btn btn-primary" %>
            </div>

          </div>

        </div>
      </div>
    </div>




  </div>
</div>

<div class="row-fluid" style="padding: 1%;border-top: 1px solid #ffffff">
  <div class="span12">

    <div class="span11">

          <div class="event_container apply_light" >
            <%= simple_format(@event.description) %>
          </div>

    </div>

  </div>
</div>







