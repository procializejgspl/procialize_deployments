<h1>Listing meeters</h1>

<table>
  <tr>
    <th>Meeting</th>
    <th>User</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meeters.each do |meeter| %>
  <tr>
    <td><%= meeter.meeting_id %></td>
    <td><%= meeter.user_id %></td>
    <td><%= meeter.status %></td>
    <td><%= link_to 'Show', meeter %></td>
    <td><%= link_to 'Edit', edit_meeter_path(meeter) %></td>
    <td><%= link_to 'Destroy', meeter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

