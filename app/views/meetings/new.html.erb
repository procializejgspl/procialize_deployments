
<div class="row-fluid">
  <div class="span12">

    <div class="span4 offset3">
      <h4>New Meeting</h4>
      <%= link_to "Back",meetings_path,:class=>"btn btn-primary btn-large hidden-desktop" %>

    </div>
  </div>
</div>
<hr>

<%= form_tag({:action => "create"}) do %>


    <div class="row-fluid">
      <div class="span12">
        <div class="span2" class="hidden-phone">
          <span class="span_label"><b>Date:</b></span>
        </div>
        <div class="span7 offset1">
          <%= text_field_tag "date",nil,:class=>"datepicker",:placeholder=>"Date of the  meeting",:required => true %>

          <%#= select_datetime Date.today, prefix: :start_date, :id => "meeting_time",:class=>"input-small" %>
        </div>
      </div>

    </div>
    <div class="row-fluid"   >
      <div class="span12">
        <div class="span2">
          <span class="span_label"><b>Time:</b></span>
        </div>
        <div class="span7 offset1">
          <%= text_field_tag "time",nil,:class=>"timepicker",:placeholder=>"Time of the meeting",:required => true %>

          <%#= select_datetime Date.today, prefix: :start_date, :id => "meeting_time",:class=>"input-small" %>
        </div>
      </div>

    </div>

    <div class="row-fluid"   >
      <div class="span12">
        <div class="span2">
          <span class="span_label"><b>Place:</b></span>
        </div>
        <div class="span7 offset1">
          <%= select_tag "meeting_location", options_from_collection_for_select(Location.all, :id, :name),:class=>"multiselect"  %>
        </div>
      </div>
    </div>

    <div class="row-fluid" style="padding-top: 2%" >
      <div class="span12">
        <div class="span2">
          <span class="span_label"><b>Agenda:</b></span>
        </div>
        <div class="span7 offset1">
          <%= text_area_tag "name" ,nil,:placeholder=>"Hi, I would like to meet you",:required => true %>
        </div>
      </div>
    </div>

    <div class="row-fluid"   >
      <div class="span12">
        <div class="span2">
          <span class="span_label"><b>Invite:</b></span>
        </div>
        <div class="span7 offset1">
          <%= select_tag "meeters[]", options_from_collection_for_select(User.all-[current_user], :id, :name,@receipient),:class=>"multiselect",:multiple=>"multiple" %>
        </div>
      </div>
    </div>

    <div class="row-fluid" style="margin-top:2% ">
      <div class="span12">

        <div class="span6 offset3">
          <button type="submit" class="btn btn-success btn-large">Schedule!</button>

      </div>
    </div>
    </div>
<script type="text/javascript">
    $( ".datepicker" ).datepicker({
        minDate: 0 ,
        dateFormat:'dd-mm-yy'
    });
    $( ".timepicker" ).timepicker();
</script>


<% end %>

