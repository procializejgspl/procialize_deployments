<div class="row-fluid message_header_container">
  <div class="span12">
    <div class="span3">
      <div class="row-fluid hidden-phone">
        <%= image_tag User.find(@meeting.user_id).user_pic ,:style => "border:1px solid black;",:width => "200px" %>
      </div>
    </div>

    <div class="span9">
        <div class="row-fluid">
            <span>From : <b><%= User.find(@meeting.user_id).name.humanize %></b> </span>
        </div>

        <div class="row-fluid">
           <span>Participants :<%= (@meeting.meeters-[current_user]).map{|u| u.user.name}.to_s %> </span>
        </div>

        <div class="row-fluid">
            <span>Where :<b><%= Location.find(@meeting.location).name.humanize %></b></span>
        </div>

        <div class="row-fluid">
          <div class="span10">
            <span>Plan on :<b><%= display_date_time(@meeting.start_time) %></b></span>
          </div>
        </div>

      <div class="row-fluid">
        <div class="span2 offset6 hidden-phone" style="font-size: 20px;">
          <%= show_meeting_rejection_link(@meeting) %>
          <%= show_meeting_acceptance_link(@meeting) %>

        </div>
      </div>

      </div>
    </div>
  </div>

<div class="row-fluid" style="padding: 1%">
  <div class="span12">


      <% unless @meeting.name.blank? %>
          <div class="message_body_container" >
            <%= simple_format(@meeting.name) %>
          </div>
      <% end %>
    </div>


</div>

