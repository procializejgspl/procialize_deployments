
<div class="row-fluid">
  <div class="span12">
    <!--<div class="span3"></div>-->
    <div class="span6 offset3">
<h4 class="new_message hidden-phone">New Message</h4>
      <h5 class="new_message hidden-desktop">New Message</h5>

      <%= link_to "Back",messages_path,:class=>"btn btn-primary btn-large hidden-desktop" %>


    </div>
  </div>
</div>
<hr>


<%= form_tag({:action => "create"}) do %>




    <div class="row-fluid"   >
      <div class="span12">
        <div class="span2 ">
          <span class="span_label"><b>To:</b></span>
        </div>
        <div class="span7 offset1">


          <%= select_tag "recipients[]", options_from_collection_for_select(User.all-[current_user], :id, :name,@receipient),:class=>"multiselect input-xxlarge",:id=>"sel",:multiple=>"multiple",:disabled =>@disable_users %>
          <% if @disable_users %>
          <%= hidden_field_tag "recipients[]",@receipient %>
          <% end %>
        </div>
      </div>
    </div>


    <div class="row-fluid" style="margin-top: 1%" >
      <div class="span12">
        <div class="span2 ">
          <span class="span_label"><b>Subject:</b></span>
        </div>
        <div class="span7 offset1">
          <%= text_field_tag "subject",@message_subject,:placeholder=>"Lets Connect",:class=>"input-large" ,:required => true %>
        </div>
      </div>
    </div>


 <div class="row-fluid">

   <div class="span2"></div>
   <div class="span7 offset1">
   <%= text_area_tag "body",@message_text,:size=>"20x7",:class=>"input-large textarea",:placeholder => "Hi, I would like to connect with you at this event" ,:required => true %>
   </div>
   <!--<div class="span10 hidden-desktop">-->
     <%#= text_area_tag "body",@message_text,:size=>"30x13",:class=>"input-large",:placeholder=>"Type the message content here" %>
   <!--</div>-->


 </div>

<div class="row-fluid">
  <div class="span12">
    <!--<div class="span4"></div>-->
    <div class="span7 offset3">
      <button type="submit" class="btn-update" style="width: 100%">Send</button>


    </div>


  </div>
</div>



<% end %>


