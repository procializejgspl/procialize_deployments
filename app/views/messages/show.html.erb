<style>
  body{
      color: #003663;
      font-family: "open sans";
      }
</style>

    <div class="row-fluid message_header_container" style="line-height:25px">
      <div class="span12">
        <div class="span3 hidden-phone">
          <div class="row-fluid">
            <%= image_tag User.find(@message.user_id).user_pic ,:style => "border:1px solid black;",:width => "200px" %>
          </div>

          </div>
        <div class="span9">

             <div class="row-fluid">
                 <span>From : <b><%= @message.user.name.humanize %></b></span>
             </div>
             <div class="row-fluid">
                <span>Others:<b> <%= @message.recipients.map{|u| u.user.name.camelcase}.to_s.gsub('[','').gsub(']','').gsub("\"",'') %></b></span>
             </div>
             <div class="row-fluid">
               <div class="span9">
              <span>Subject : <b><%= @message.subject %></b></span>
               </div>
             </div>
             <div class="row-fluid">
               <span>Sent on:  <b><%= display_date_time(@message.created_at) %></b></span>
             </div>
             <div class="row-fluid">
               <div class="span12">
               <%= link_to (fa_icon "list-ul"),new_message_path,:class=>"btn  btn-default non-navigatable ",:onclick=>'toggleContent(this,event)' %>
               <%= link_to (fa_icon "envelope"),mark_message_path(:message_id=>@message.id,:mark=>"false"),:class=>"btn btn-default" %>
                <%= link_to (fa_icon "mail-reply"),new_message_path(:prev_msg=>@message.id,:type=>"Re",:rcpt=>@message.user_id),:class=>" non-navigatable btn  btn-default show_existing_content",:onclick=>'toggleContent(this,event)' %>
                <%= link_to (fa_icon "mail-forward"),new_message_path(:prev_msg=>@message.id,:type=>"Fwd"),:class=>"non-navigatable btn btn-default show_existing_content " ,:onclick=>'toggleContent(this,event)'%>
               </div>

             </div>

        </div>
        </div>
      </div>



        <div class="row-fluid" style="padding: 1%;border-top: 1px solid #ffffff">
              <div class="span12">

                <div class="span11">
            <% unless @message.body.blank? %>
                <div class="message_body_container" >
                  <%= simple_format(@message.body) %>
                </div>
            <% end %>
                </div>

          </div>
        </div>





