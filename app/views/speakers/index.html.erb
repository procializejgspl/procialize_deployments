<h1>Listing speakers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Speaker details</th>
    <th>User</th>
    <th>Speaker pic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%= speaker.name %></td>
    <td><%= speaker.speaker_details %></td>
    <td><%= speaker.user_id %></td>
    <td><%= speaker.speaker_pic %></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

