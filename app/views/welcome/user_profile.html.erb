<style>
  body{
      color: #003663;
      color: #003663;
  }
</style>

<div class="row-fluid" style="margin-left: 6%;">

  <div class="span3">
    <div class="row-fluid">
      <%= image_tag @user.user_pic.url %>
    </div>
  </div>

  <div class="span9">

    <h4>
      <%= @user.name.titlecase %> - <%= @user.role.name %>
      <% if @user.assets.count>0 %>
          <a target="_blank" href="<%= @user.assets.first.content.url %>"><i class="icon-download"></i> </a>
      <% end %>
    </h4>

    <p class="user-info"><%= @user.headline %>, <%= @user.company %></p>
    <p class="user-info"><%= @user.industry %></p>
    <p class="user-info"><%= @user.interest %></p>
    <p class="user-info"><%= @user.location %></p>


  </div>
</div>
<div class="row-fluid" style="margin-top:5% ">
  <div class="span5 offset1">
    <%= generate_follow_link(@user.id) %>

  </div>
  <div class="span5">
    <%= link_to "Back", root_path, :class => "btn-user btn-light", style: 'padding: 5px 40px' %>
  </div>

</div>
<div class="row-fluid" style="margin-top:5% ">
  <div class="span5 offset1">
    <%= link_to "Message", new_message_path(:rcpt => @user.id), :class => "btn-user btn-light", style: 'padding: 5px 21px', :onclick => "toggleContent(this,event)", :title => "Send message" if @user.role.can_message %>
  </div>
  <div class="span5">
    <%= link_to "Meet", new_meeting_path(:rcpt => @user.id), :class => "btn-user btn-dark", style: 'padding: 5px 40px', :onclick => "toggleContent(this,event)", :title => "Fix meeting" if @user.role.can_meet %>
  </div>

</div>



<% if @user_employees.count>0 %>
    <div class="row-fluid" style="height: 100px">
      <%= render :partial => "welcome/user_list" %>
    </div>
<% end %>
<% if !@user.extra_info.blank? %>
    <div class="row-fluid" style="height: 200px;overflow-y: auto;">
      <div class="span11 offset1">
        <p><%= simple_format(@user.extra_info) %></p>
      </div>
    </div>
<% end %>


<% if @feeds.count>0 %>
    <div class="row-fluid">
      <ul class="message_alternate_colored_list" style="height: 175px">


        <% @feeds.each do |f| %>
            <li style="margin-top: 2%;pointer-events:none;cursor: auto">

              <div class="row-fluid" style="height: 10%;width: 100%">
                <div class="span12">
                  <div class="row-fluid message_list_header">
                    <b>  <%= f.user.name %> says...</b>
                  </div>
                  <div class="row-fluid" style="padding: 2%">

                    <div class="span2 hidden-phone">
                      <%= image_tag current_user.user_pic.url, :class => "img-responsive " %>
                    </div>
                    <div class="span9">

                      <div class="row-fluid">
                        <span style="font-size: 1.0em;font-weight: bold">  <%= f.message %></span>
                      </div>


                    </div>


                  </div>
                </div>
              </div>

            </li>
        <% end %>
      </ul>
    </div>


<% end %>